<%= simple_form_for(activity) do |f| %>
  <%= f.input :title, placeholder: 'Title' %>
  <%= f.input :date, placeholder: 'Date' %>
  <%= f.input :description, placeholder: 'Description' %>
  <%= f.input :category, collection: Activity::ACTIVITIES %>
  <%= f.input :vibe, collection: Activity::VIBES %>
  <%= f.input :group_size, placeholder: 'Group size' %>
  <%= f.input :location %>
  <%= f.input :ideal_member %>
  <%= f.input :price %>
  <%= f.button :submit, "Add", class: "tm-btn-primery" %>
<% end %>
