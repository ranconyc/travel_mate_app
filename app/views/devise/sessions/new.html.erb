<div class="form-page">
  <div class="header-login-signup">
    <%= render 'shared/logo_header' %>
  </div>
    <div class="container-sm">
      <div class="tm-form">
        <h2 class="form-title">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, label: false, placeholder: 'Email'%>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, label: false, placeholder: 'Password' %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "tm-btn-primery form-btn" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

