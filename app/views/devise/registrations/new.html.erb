<div class="form-page">
  <%= render 'shared/logo_header' %>
    <div class="container-sm">
      <div class="tm-form">
        <h2 class="form-title">Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, label: false, placeholder: 'First name' %>
            <%= f.input :last_name, label: false, placeholder: 'Last name' %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, label: false, placeholder: 'Email' %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Password'%>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Confirm password'%>
                        <h6 class="birth-title">Date of birth</h6>
            <%= f.input :date_of_birth, :start_year => Date.today.year - 12,
                        :end_year => 1900,
                        :order => [ :day, :month, :year], required: true, label: false %>
            <%= f.input :gender, as: :radio_buttons, collection:["Male", "Female", "Non-Binary"], wrapper: :vertical_collection_inline %>
            <h6 class="birth-title">Profile picture</h6>
            <%= f.input :avatar, as: :file, label: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "tm-btn-primery form-btn" %>
          </div>
        <% end %>
        <div class="login-link">
          <span>Already have an account?</span>
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
