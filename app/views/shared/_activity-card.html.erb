      <div class="activity-card-avatar" style="background-image: url('<%= cl_image_path activity.user.photo.key, height: 300, width: 400, crop: :fill %>')"></div>
      <div class="category-title-date">
        <div class="category-upload-time">
          <h2 class="activity-card-category"><%= activity.category %></h2>
          <h2 class="activity-card-upload-time">3 Hours Ago</h2>
        </div>
        <h1 class="activity-card-title"><%= activity.title %></h1>
        <h2 class="activity-card-date"><%= activity.date %></h2>
      </div>
    </div>
  </div>
    <p class="activity-card-description"><%= activity.description %></p>
    <div class="activity-card-capacity">
      <p>3 Spots Left</p>
    </div>
    <a href="#" class="activity-card-btn-join">Join</a>
</div>
