<div class="header-searchbar">
  <%= render 'shared/logo_header', text: "Welcome to #{@cur_location}!", logo_class: 'header-homepage logo-homepage' %>
  <div class="search-bar">
    <div class="search-btn"><i class="fas fa-search"></i></div>
  </div>
</div>

  <div class="category-scroll">
    <div class="cat-card nearby-cat" id="my-location">Nearby</div>
    <% Activity::ACTIVITIES.each do |activity| %>
      <% activity_lower = activity.downcase %>
      <% if @cat == activity_lower %>
        <%= link_to activity, root_path(cat: activity_lower), class: "cat-card #{activity_lower}-cat cat-selected", data: { activity_category: activity_lower } %>
      <% else %>
        <%= link_to activity, root_path(cat: activity_lower), class: "cat-card #{activity_lower}-cat", data: { activity_category: activity_lower } %>
      <% end %>
    <% end %>
  </div>
  <div class="container-mobile">
    <div class="Recent">
      <h2>Recent activities</h2>
    </div>
      <% @activities.each do |single_activity| %>
        <%= render 'shared/activity-card', activity: single_activity %>
      <% end %>
  </div>

<%= render 'shared/bottom-navbar' %>
<%= javascript_pack_tag "my_location" %>
